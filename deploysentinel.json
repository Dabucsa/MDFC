{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.6.0",
  "parameters": {
    "lawName": { "type": "string" },
    "location": { "type": "string", "defaultValue": "[resourceGroup().location]" },
    "retentionDays": { "type": "int", "defaultValue": 90, "minValue": 7 },

    "enableAzureActivity": { "type": "bool", "defaultValue": true },
    "diagnosticSettingName": { "type": "string", "defaultValue": "subscriptionToLa" },
    "subscriptionDeploymentLocation": { "type": "string", "defaultValue": "[parameters('location')]" },

    "xdrIntegrated": { "type": "bool", "defaultValue": true },
    "skipMdxManagedConnectors": { "type": "bool", "defaultValue": "[parameters('xdrIntegrated')]" },

    "enableIdentityProtection": { "type": "bool", "defaultValue": true },
    "tenantId": { "type": "string", "metadata": { "description": "Tenant ID para alertas de Entra ID Protection" } },

    "enableDefenderForCloud": { "type": "bool", "defaultValue": true },
    "mdcSubscriptionId": {
      "type": "string",
      "defaultValue": "[subscription().subscriptionId]",
      "metadata": { "description": "Subscription ID desde la que Defender for Cloud enviará alertas a Sentinel." }
    },

    "enableDefenderForOffice365": { "type": "bool", "defaultValue": true }
  },
  "variables": {
    "wsId": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('lawName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[parameters('lawName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": { "name": "PerGB2018" },
        "retentionInDays": "[parameters('retentionDays')]",
        "features": { "enableLogAccessUsingOnlyResourcePermissions": true },
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    {
      "type": "Microsoft.SecurityInsights/onboardingStates",
      "apiVersion": "2025-06-01",
      "name": "default",
      "scope": "[variables('wsId')]",
      "properties": { "customerManagedKey": false },
      "dependsOn": [ "[variables('wsId')]" ]
    },

    /* Azure Activity (suscripción -> LA) */
    {
      "condition": "[parameters('enableAzureActivity')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "sub-deploy-activity-to-law",
      "location": "[parameters('subscriptionDeploymentLocation')]",
      "subscriptionId": "[subscription().subscriptionId]",
      "properties": {
        "expressionEvaluationOptions": { "scope": "inner" },
        "mode": "Incremental",
        "parameters": {
          "diagName": { "value": "[parameters('diagnosticSettingName')]" },
          "workspaceId": { "value": "[variables('wsId')]" }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-08-01/subscriptionDeploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "diagName": { "type": "string" },
            "workspaceId": { "type": "string" }
          },
          "resources": [
            {
              "type": "Microsoft.Insights/diagnosticSettings",
              "apiVersion": "2021-05-01-preview",
              "name": "[parameters('diagName')]",
              "properties": {
                "workspaceId": "[parameters('workspaceId')]",
                "logs": [ { "categoryGroup": "allLogs", "enabled": true } ],
                "metrics": [ { "category": "AllMetrics", "enabled": false } ]
              }
            }
          ]
        }
      },
      "dependsOn": [ "[variables('wsId')]" ]
    },

    /* Entra ID Protection (saltado si XDR lo gestiona) */
    {
      "condition": "[and(parameters('enableIdentityProtection'), not(parameters('skipMdxManagedConnectors')))]",
      "type": "Microsoft.SecurityInsights/dataConnectors",
      "apiVersion": "2025-06-01",
      "name": "[guid(parameters('tenantId'), parameters('lawName'), 'AADIP-Alerts')]",
      "scope": "[variables('wsId')]",
      "kind": "AzureActiveDirectory",
      "properties": {
        "tenantId": "[parameters('tenantId')]",
        "dataTypes": { "alerts": { "state": "Enabled" } }
      },
      "dependsOn": [
        "[variables('wsId')]",
        "[format('Microsoft.SecurityInsights/onboardingStates/{0}', 'default')]"
      ]
    },

    /* Defender for Cloud (SecurityAlert) */
    {
      "condition": "[parameters('enableDefenderForCloud')]",
      "type": "Microsoft.SecurityInsights/dataConnectors",
      "apiVersion": "2025-06-01",
      "name": "[guid(parameters('mdcSubscriptionId'), parameters('lawName'), 'MDC-Alerts')]",
      "scope": "[variables('wsId')]",
      "kind": "AzureSecurityCenter",
      "properties": {
        "dataTypes": { "alerts": { "state": "Enabled" } },
        "subscriptionId": "[parameters('mdcSubscriptionId')]"
      },
      "dependsOn": [
        "[variables('wsId')]",
        "[format('Microsoft.SecurityInsights/onboardingStates/{0}', 'default')]"
      ]
    },

    /* Defender for Office 365 (MDO) – SecurityAlert gratis */
    {
      "condition": "[and(parameters('enableDefenderForOffice365'), not(parameters('skipMdxManagedConnectors')))]",
      "type": "Microsoft.SecurityInsights/dataConnectors",
      "apiVersion": "2025-06-01",
      "name": "[guid(parameters('tenantId'), parameters('lawName'), 'MDO-Alerts')]",
      "scope": "[variables('wsId')]",
      "kind": "OfficeATP",
      "properties": {
        "dataTypes": { "alerts": { "state": "Enabled" } }
      },
      "dependsOn": [
        "[variables('wsId')]",
        "[format('Microsoft.SecurityInsights/onboardingStates/{0}', 'default')]"
      ]
    }
  ],
  "outputs": {
    "logAnalyticsWorkspaceResourceId": { "type": "string", "value": "[variables('wsId')]" }
  }
}
